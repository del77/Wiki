@page
@model Wiki.Web.Pages.AdminPanelModel
@{
    ViewData["Title"] = "AdminPanel";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
@if (Model.User.IsInRole("Read"))
{
    <button class="collapsible">Manage Users</button>
    <div class="content">
        <div class="container">
            
            <ul class="nav nav-pills nav-stacked">
                @foreach(var user in Model.Users)
                {
                <li><a asp-page="/Users/Edit" asp-route-userId="@user.Id">@Html.DisplayFor(model => user.Email)</a></li>


                }

            </ul>
        </div>


    </div>
}

<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.maxHeight) {
                content.style.maxHeight = null;
            } else {
                content.style.maxHeight = content.scrollHeight + "px";
            }
        });
    }
</script>
